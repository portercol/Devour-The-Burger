<h1>Burger Tyme!</h1>

<div>
  <h2>Deliciousness below...</h2>

  <ul>
    {{#each burgers}}
    {{#unless this.devoured}}
    <ul>
      {{this.burger_name}}
      <button class="devour" data-id="{{id}}">
        DEVOUR!!
      </button>
    </ul>
    {{/unless}}
    {{/each}}
  </ul>
</div>

<h2>Chef Suggestions?</h2>
<form class="create-form">
  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>
  <button type="submit">Add Burger</button>
</form>


<h2>Burgers chowed...</h2>
<div>
  <ul>
    {{#each burgers}}
    {{#if this.devoured}}
    <ul>
      {{this.burger_name}}
    </ul>
    {{/if}}
    {{/each}}
  </ul>
</div>